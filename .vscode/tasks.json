{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "|     W-Meson",
            "type": "shell",
            "presentation": {
                "clear": true
            },
            "group": "build",
            "command": "meson",
            "args": [
                "build-win",
            ],
            "options": {
                "statusbar": {
                    "label": "$(arrow-up) w-meson",
                    "color": "#FFCB6B",
                    "tooltip": "meson win",
                }
            },
        },
        {
            "label": "W-Build",
            "type": "shell",
            "presentation": {
                "clear": true
            },
            "group": "build",
            "command": "meson",
            "args": ["compile"],
            "options": {
                "cwd": "${workspaceRoot}/build-win",
                "statusbar": {
                    "label": "$(star-full) w-build",
                    "color": "#A8FF60",
                    "tooltip": "meson compile -C build-win",
                }
            },
            "problemMatcher": {
                "owner": "cpp",
                "pattern": {
                    "regexp": "^(?:\\.\\.(?:\\\\|/))?(.*):(\\d+):(\\d+):.*(error|warning|info):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                },
                "fileLocation": ["relative", "${workspaceRoot}"],
            }
        },
        {
            "label": "W-Clean",
            "type": "shell",
            "presentation": {
                "clear": true
            },
            "group": "build",
            "command": "ninja.exe",
            "args": [
                "-t",
                "clean"
            ],
            "options": {
                "cwd": "${workspaceRoot}/build-win",
                "statusbar": {
                    "label": "$(circle-large-outline) w-clean",
                    "color": "#A463D6",
                    "tooltip": "meson compile -C build-win --clean",
                }
            }
        },
        {
            "label": "W-Delete",
            "type": "shell",
            "presentation": {
                "clear": true
            },
            "group": "build",
            "command": "remove-item",
            "args": [
                "-r",
                "build-win",
            ],
            "options": {
                "statusbar": {
                    "label": "$(trash) w-delete",
                    "color": "#FF6C60",
                    "tooltip": "delete build-win",
                }
            },
        },
        {
            "label": "run",
            "type": "shell",
            "command": "build-win/src/white.exe",
            "options": {
                "statusbar": {
                    "label": "$(debug-start) run",
                    "color": "#1094cd",
                    "tooltip": "cmd /c build.dat",
                }
            }
        },
    ]
}