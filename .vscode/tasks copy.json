{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "M-Update",
            "type": "shell",
            "presentation": {
                "clear": true
            },
            "group": "build",
            "command": "meson",
            "args": [
                "subprojects",
                "update"
            ],
            "options": {
                "statusbar": {
                    "label": "$(refresh) m-update",
                    "color": "#736af8",
                    "tooltip": "meson subprojects update",
                }
            },
        },
        {
            "label": "R-Meson",
            "type": "shell",
            "presentation": {
                "clear": true
            },
            "group": "build",
            "command": "meson",
            "args": [
                "build-release",
                "--cross-file=cross/stm32f767.txt",
                "--buildtype=release",
                "-Dcpu=stm32f7",
            ],
            "options": {
                "statusbar": {
                    "label": "$(arrow-up) r-meson",
                    "color": "#FFCB6B",
                    "tooltip": "meson release",
                }
            },
        },
        {
            "label": "R-Build",
            "type": "shell",
            "presentation": {
                "clear": true
            },
            "group": "build",
            "command": "meson",
            "args": ["compile"],
            "options": {
                "cwd": "${workspaceRoot}/build-release",
                "statusbar": {
                    "label": "$(star-full) r-build",
                    "color": "#A8FF60",
                    "tooltip": "meson compile -C build-release",
                }
            },
            "problemMatcher": {
                "owner": "cpp",
                "pattern": {
                    "regexp": "^(?:\\.\\.(?:\\\\|/))?(.*):(\\d+):(\\d+):.*(error|warning|info):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                },
                "fileLocation": ["relative", "${workspaceRoot}"],
            }
        },
        {
            "label": "R-Clean",
            "type": "shell",
            "presentation": {
                "clear": true
            },
            "group": "build",
            "command": "ninja.exe",
            "args": [
                "-t",
                "clean"
            ],
            "options": {
                "cwd": "${workspaceRoot}/build-release",
                "statusbar": {
                    "label": "$(circle-large-outline) r-clean",
                    "color": "#A463D6",
                    "tooltip": "meson compile -C build-release --clean",
                }
            }
        },
        {
            "label": "R-Delete",
            "type": "shell",
            "presentation": {
                "clear": true
            },
            "group": "build",
            "command": "remove-item",
            "args": [
                "-r",
                "build-release",
            ],
            "options": {
                "statusbar": {
                    "label": "$(trash) r-delete",
                    "color": "#FF6C60",
                    "tooltip": "delete build-release",
                }
            }
        },
